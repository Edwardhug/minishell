int is_dash_n(char *arg) {
    int i = 0;
    int consecutive_ns = 0;

    while (arg[i] == 'n') {
        consecutive_ns++;
        i++;
    }

    if (arg[i] == '\0' && consecutive_ns > 1) {
        return 0;
    }
    return 1;
}

int ft_echo(char **cmd, t_exec *exec) {
    int dash_n = 0;
    int i = 1;
    int j;
    int simple_quote;

    while (dash_n == 0) {
        dash_n = is_dash_n(cmd[i]);
        if (!dash_n)
            i++;
    }

    while (cmd[i]) {
        simple_quote = 0;
        j = 0;
        if (cmd[i][j] == '\'')
            simple_quote = 1;
        while (cmd[i][j + simple_quote + simple_quote]) {
            if (cmd[i][j] == '$' && simple_quote == 0)
                print_var(cmd, &i, &j, exec);
            else
                ft_printf("%c", cmd[i][j + simple_quote]);
            j++;
        }
        if (cmd[i + 1] != NULL)
            ft_printf(" ");
        i++;
    }

    if (dash_n)
        ft_printf("\n");

    free_exec_struct(exec);
    exit(0);
}
